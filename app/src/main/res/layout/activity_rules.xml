<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quiz Rules"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please read the following rules carefully before starting the quiz:\n\n1. Each question has only one correct answer.\n2. You have 30 seconds for each question.\n3. Once you select an answer, it cannot be changed.\n4. Attempt all questions to get your final score.\n\nBest of luck!"
                android:textSize="16sp"
                android:padding="8dp" />

            <Button
                android:id="@+id/takeQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take Quiz"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btnViewResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Results"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />
            <Button
                android:id="@+id/btnViewStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Quiz Stats"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
